<h2><%= @store.name %></h2>
<form action="/store/<%= @store.id %>" method="post">
  <input type="hidden" name="_method" value="delete">
  <input type="hidden" name="id" id="id" value="<%= @store.id %>">
  <button class="btn red" type="submit" name="button">Delete</button>
</form>
<div class="row">
  <div class="col s6">
    <p>Shoe Shelf</p>
    <div class="card">
      <% if @store.shoes.any? %>
        <% @store.shoes.each do |shoe| %>
          <li><%= shoe.label %> -- <%=  shoe.size %></li>
        <% end %>
      <% end %>
    </div>
  </div>
  <div class="col s6">
    <p>Add Shoes To Store</p>
    <form action="/store/<%= @store.id %>/shoes" method="post">
      <input type="text" name="label" id="label" placeholder="Shoe Name/Label" required>
      <div class="col s6">
        <input type="text" name="size" id="size" placeholder="Shoe Size" required>
      </div>
      <div class="col s6">
        <input type="text" name="color" id="color" placeholder="Shoe Color" required>
      </div>
      <% if @brands.any? %>
        <% @brands.each do |brand|%>
          <input type="radio" name="brand" id="<%= brand.name %>" value="<%= brand.id %>">
          <label for="<%= brand.name %>"><%= brand.name %></label>
        <% end %>
      <% end %>
      <button class="btn" type="submit" name="button">New Shoe</button>
    </form>
  </div>
</div>
  <p>Edit shop name</p>
<div class="edit">
  <form action="/store/<%= @store.id %>" method="post">
    <input type="hidden" name="_method" value="patch">
    <input type="text" name="name" id="name" value="<%= @store.name %>">
    <button class="btn yellow" type="submit" name="button">Change</button>
  </form>
</div>
